name: Build macOS Executable

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build:
    runs-on: macos-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Install PyInstaller
        run: |
          pip install pyinstaller

      - name: Install torch with CPU support
        run: |
          pip install torch torchvision --index-url https://download.pytorch.org/whl/cpu

      - name: Create executable with PyInstaller
        run: |
          python -m PyInstaller --onefile --windowed --name florr_auto_afk_lite main.py

      - name: Copy necessary files to dist directory
        run: |
          cp -r models dist/
          cp config.json dist/
          cp set_opaque.js dist/
          mkdir -p dist/logs

      - name: Compress files into zip
        run: |
          cd dist
          zip -r ../florr_auto_afk_lite_macos.zip .

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: florr_auto_afk_lite_macos
          path: florr_auto_afk_lite_macos.zip
          retention-days: 90

      - name: Upload Executable to Release (on push)
        if: ${{ github.event_name == 'push' }}
        uses: softprops/action-gh-release@v1
        with:
          files: florr_auto_afk_lite_macos.zip
          name: macOS Build ${{ github.sha }}
          body: 'Automated macOS build'
          draft: false
          prerelease: false
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
